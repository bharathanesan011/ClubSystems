@model IEnumerable<ClubSystems.Models.MemberShip>
@{
    ViewData["Title"] = "Indiviual";
    
}

<h1>Indiviual</h1>
<h4>MemberShip</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Indiviual">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label for="pid" class="control-label"></label>
                <select id="pid" name="pid" class="form-control" asp-items="ViewBag.PersonID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MemberShipType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOverdrawn)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberShipType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountBalance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.Forenames)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsOverdrawn)
                </td>
                
            </tr>
        }
    </tbody>
</table>


